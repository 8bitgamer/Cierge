@{
    ViewData["Title"] = "Your code has been sent.";
}

@model TokenLoginViewModel

<h2>@ViewData["Title"]</h2>
<p>
    Code sent to email.
    Please check your email now!
</p>

<form asp-controller="Account" asp-action="TokenLogin" method="get" class="form-horizontal" role="form">

    <div asp-validation-summary="All" class="text-danger"></div>

    <input asp-for="Email" type="hidden" value="@Model.Email" />
    <input asp-for="RememberMe" type="hidden" value="@Model.RememberMe" />
    <input asp-for="ReturnUrl" type="hidden" value="@Model.ReturnUrl" />


    <div class="form-group">
        <label asp-for="Token" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Token" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">Check Code</button>
        </div>
    </div>

</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}