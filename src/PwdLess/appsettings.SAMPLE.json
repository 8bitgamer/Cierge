{ // DON'T FORGET TO RENAME TO appsettings.json
  "PwdLess": { // expiry values are in seconds
    "Nonce": {
      "Expiry": 21600,
      "Length": 10
    },
    "RefreshToken": {
      "Expiry": 5184000,
      "Length": 20 // (upper limit of GUID length)
    },
    "AccessToken": {
      "SecretKey": "9e38e35dQ1b6bV422fCb2fbPb3215181742b",
      "Issuer": "YOUR_ISS_NAME",
      "Expiry": 259200,
      "Audience": "YOUR_CLIENT_ID"
    },
    "EmailAuth": {
      "From": "EMAIL_ADDRESS_FROM",
      "Server": "EMAIL_SERVER",
      "Port": 465,
      "SSL": true,
      "Username": "EMAIL_USER",
      "Password": "EMAIL_PASSWORD"
    },
    "EmailContents": {
      "NewUser": {
        "Subject": "Welcome, first time user!",
        "Body": "Continue, {{contact}}: {{nonce}}",
        "BodyType": "plain"
      },
      "ReturningUser": {
        "Subject": "Welcome, returning user!",
        "Body": "Continue, {{contact}}: {{nonce}}",
        "BodyType": "plain"
      },
      "AddingContact": {
        "Subject": "Show us that you have access to this email so we add it to account!",
        "Body": "Continue, {{contact}}: {{nonce}}",
        "BodyType": "plain"
      }
    },
    "ConnectionStrings": {
      "LocalSqlSTest": "Server=(localdb)\\MSSQLLocalDB; Database=PwdLess; Trusted_Connection=True; MultipleActiveResultSets=true"
    }
  },

 "IpRateLimiting": {
    "EnableEndpointRateLimiting": false,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "IpWhitelist": [ "127.0.0.1", "::1/10", "192.168.0.0/24" ],
    "EndpointWhitelist": [],
    "ClientWhitelist": [ "dev-id" ],
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1s",
        "Limit": 2
      },
      {
        "Endpoint": "*",
        "Period": "15m",
        "Limit": 5
      },
      {
        "Endpoint": "*",
        "Period": "12h",
        "Limit": 15
      },
      {
        "Endpoint": "*",
        "Period": "7d",
        "Limit": 30
      }
    ]
  },

  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information"
    }
  }
}
